  "parameters": {
    "name": {
      "type": "string",
      "metadata": {
        "description": "Static Web App name"
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location for the resource"
      }
    },
    "sku": {
      "type": "string",
      "defaultValue": "Free",
      "allowedValues": [
        "Free",
        "Standard"
