      "type": "Microsoft.Web/staticSites/linkedBackends",
      "apiVersion": "2023-01-01",
      "name": "[format('{0}/{1}', parameters('name'), 'backend')]",
      "properties": {
        "backendResourceId": "[parameters('backendApiUrl')]",
        "region": "[parameters('location')]"
